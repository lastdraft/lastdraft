    <mapped-superclass name="Lastdraft\Bundle\PostBundle\Entity\Post" table="posts" repository-class="Lastdraft\Bundle\PostBundle\Repository\PostRepository">
        <id name="id" column="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="title" type="string" column="title" length="255" />
        <field name="body" type="text" column="body" />
        <field name="publishOn" type="datetime" column="publish_on" />
        <field name="createdAt" type="datetime" column="created_at" />
        <field name="updatedAt" type="datetime" column="updated_at" />

        <many-to-one field="author" target-entity="Lastdraft\Bundle\PostBundle\Entity\AuthorInterface" inversed-by="posts">
            <join-column name="author_id" referenced-column-name="id" />
        </many-to-one>
