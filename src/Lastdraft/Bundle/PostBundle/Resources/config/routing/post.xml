<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="post" pattern="/">
        <default key="_controller">LastdraftPostBundle:Post:index</default>
    </route>

    <route id="post_show" pattern="/{id}/show">
        <default key="_controller">LastdraftPostBundle:Post:show</default>
    </route>

    <route id="post_new" pattern="/new">
        <default key="_controller">LastdraftPostBundle:Post:new</default>
    </route>

    <route id="post_create" pattern="/create">
        <default key="_controller">LastdraftPostBundle:Post:create</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="post_edit" pattern="/{id}/edit">
        <default key="_controller">LastdraftPostBundle:Post:edit</default>
    </route>

    <route id="post_update" pattern="/{id}/update">
        <default key="_controller">LastdraftPostBundle:Post:update</default>
        <requirement key="_method">post|put</requirement>
    </route>

    <route id="post_delete" pattern="/{id}/delete">
        <default key="_controller">LastdraftPostBundle:Post:delete</default>
        <requirement key="_method">post|delete</requirement>
    </route>

</routes>
