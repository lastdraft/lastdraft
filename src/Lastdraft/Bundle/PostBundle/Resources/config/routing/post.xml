<?xml version="1.0" encoding="UTF-8"?>
<routes
    xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <!-- deprecate this route in the future -->
    <route id="lastdraft_post_homepage" pattern="/hello/{name}">
        <default key="_controller">LastdraftPostBundle:Post:index</default>
    </route>

    <route id="index" pattern="/index">
        <default key="_controller">LastdraftPostBundle:Post:index</default>
    </route>

    <route id="show" pattern="/show/{id}">
        <default key="_controller">LastdraftPostBundle:Post:show</default>
    </route>
</routes>
