<?xml version="1.0" ?>
<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="lastdraft.event_subscriber.load_metadata.class">Lastdraft\Bundle\PostBundle\EventListener\LoadMetadataSubscriber</parameter>

        <!-- Author -->
        <parameter key="lastdraft.entity.author.class">Lastdraft\Bundle\PostBundle\Entity\Author</parameter>
        <parameter key="lastdraft.repository.author.class">Lastdraft\Bundle\PostBundle\Repository\AuthorRepository</parameter>

        <!-- Post -->
        <parameter key="lastdraft.entity.post.class">Lastdraft\Bundle\PostBundle\Entity\Post</parameter>
        <parameter key="lastdraft.repository.post.class">Lastdraft\Bundle\PostBundle\Repository\PostRepository</parameter>
    </parameters>

    <services>
        <service id="lastdraft.event_subscriber.load_metadata" class="%lastdraft.event_subscriber.load_metadata.class%">
            <tag name="doctrine.event_subscriber" />
            <argument>%lastdraft.config.classes%</argument>
        </service>

        <!-- Author -->
        <service id="lastdraft.entity.author" class="%lastdraft.entity.author.class%" />
        <service id="lastdraft.repository.author" class="%lastdraft.repository.author.class%" factory-service="doctrine" factory-method="getRepository">
            <argument>%lastdraft.entity.author.class%</argument>
        </service>

        <!-- Post -->
        <service id="lastdraft.entity.post" class="%lastdraft.entity.post.class%" />
        <service id="lastdraft.repository.post" class="%lastdraft.repository.post.class%" factory-service="doctrine" factory-method="getRepository">
            <argument>%lastdraft.entity.post.class%</argument>
        </service>
    </services>
</container>
