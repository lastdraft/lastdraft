<h1>Post</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ post.id }}</td>
        </tr>

        <tr>
            <th>Body</th>
            <td>{{ post.body }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('post') }}">Back to the list</a>
    </li>
    <li>
        <a href="{{ path('post_edit', { 'id': post.id }) }}">Edit</a>
    </li>
